{
    "manifest_version": 2,
    "name": "Chrome Angular2 + TypeScript extension",
    "short_name": "chrome-extension",
    "description": "Extension for Chrome using Angular2 and TypeScript",
    "version": "1.0.0",
    "author": "Tomasz Pokora",

    "chrome_url_overrides": {
        "newtab": "index.html"
    },

    "background": {
        "page": "index.html",
        "persistent": false
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": ["activeTab"],

    "browser_action": {

    },

    "default_popup": "index.html"


}